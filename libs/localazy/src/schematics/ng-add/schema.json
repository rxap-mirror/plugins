{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "rxap-plugin-localazy",
  "title": "RxAP localazy workspace plugin",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "Name of the project.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What project would you like to add the localazy plugin?"
    },
    "extractTarget": {
      "type": "string",
      "description": "The target that extracts or generate the translation source file."
    }
  },
  "required": []
}
