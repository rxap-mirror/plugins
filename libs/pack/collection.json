{
  "$schema": "../../node_modules/@angular-devkit/schematics/collection-schema.json",
  "name": "plugin-pack",
  "version": "0.0.1",
  "schematics": {
    "config": {
      "factory": "./src/schematics/config/schematic",
      "schema": "./src/schematics/config/schema.json",
      "description": "Adds the @plugin-pack:build to the specified project"
    },
    "add-target": {
      "factory": "./src/schematics/config/index",
      "schema": "./src/schematics/config/schema.json",
      "description": "Adds a target to the targets options array"
    },
    "ng-add": {
      "description": "Adds the pack plugin to the workspace",
      "factory": "./src/schematics/ng-add/index",
      "schema": "./src/schematics/ng-add/schema.json",
      "save": "devDependencies",
      "aliases": [
        "install"
      ]
    }
  }
}
